	<script>
		var arr = document.getElementById('box').getElementsByTagName('div');
		
		for (var i = 0; i < arr.length; i++) {		
			arr[i].onclick = function() {
				for (var j = 0; j < arr.length; j++) {
					arr[j].style.cssText = 'width: 40px; transition: 0.5s';
				}
